{
	"_version": "1.1.0",
	"sap.app": {
		"_version": "1.1.0",
		"id": "homberger.weatherapp",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"dataSources": {
			"startupData": {
				"uri": "model/startupData.json",
				"type": "JSON"
			},
			"images": {
				"uri": "model/defaultImages.json",
				"type": "JSON"
			},
			"settings": {
				"uri": "model/defaultSettings.json",
				"type": "JSON"
			},
			"readings": {
				"uri": "/odata",
				"type": "OData",
				"settings": {
					"localUri": "localService/metadata.xml",
					"annotations": []
				}
			}
		}
	},
	"sap.ui": {
		"_version": "1.71.7",
		"technology": "UI5",
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_belize",
			"sap_belize_plus",
			"sap_belize_hcb",
			"sap_bluecrystal",
			"sap_hcb"
		]
	},
	"sap.ui5": {
		"_version": "1.52.2",
		"rootView": "homberger.weatherapp.view.App",
		"dependencies": {
			"minUI5Version": "1.52",
			"libs": {
				"sap.m": {}
			}
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "homberger.weatherapp.i18n.i18n"
				}
			},
			"settings": {
				"type": "sap.ui.model.json.JSONModel",
				"dataSource": "settings"
			},
			"images": {
				"type": "sap.ui.model.json.JSONModel",
				"dataSource": "images"
			},
			"": {
				"type": "sap.ui.model.json.JSONModel",
				"dataSource": "startupData"
			},
			"readings": {
				"type": "sap.ui.model.odata.v2.ODataModel",
				"dataSource": "readings"
			}

		},
		"routing": {
		  "config": {
			"routerClass": "sap.m.routing.Router",
			"viewType": "XML",
			"viewPath": "homberger.weatherapp.view",
			"controlId": "idWeatherApp",
			"controlAggregation": "pages",
			"async": true
		  },
		  "routes": [
			{
			  "pattern": "",
			  "name": "weather",
			  "target": "weather"
			},
			{
			  "pattern": "imageA/{source}",
			  "name": "imageA",
			  "target": "imageA"
		  	},
			{
			  "pattern": "imageB/{source}",
			  "name": "imageB",
			  "target": "imageB"
		  	}
		  ],
		  "targets": {
			"weather": {
			  "viewID": "weather",
			  "viewName": "weather",
			  "transition": "flip"
			},
			"imageA": {
			  "viewId": "imageA",
			  "viewName": "imageA",
			  "transition": "flip"
			},
			"imageB": {
			  "viewId": "imageB",
			  "viewName": "imageB",
			  "transition": "flip"
			}
		  }
	  },
		"resources": {
		  "css": [
					{
					  "uri": "css/style.css"
					}
		  ]
		}
	}
}
