<mvc:View
	controllerName="sap.ui.demo.wt.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"	
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml"
	height="100%">	
	<html:style>
      .temperatureWarm {
         <!-- color: "#EB1924"; -->
		 <!--   #DC143C-->
		 color: crimson;
      }
      .temperatureCold {
         <!--  	#1E90FF -->	  
         color: dodgerBlue;
      }
	 .text {
         color: grey;
      }
      .sizeMediumBold {
			font-family: arial;
    		font-size: 30px;
		    font-weight: bold;  
	  }    
      .sizeLargeBold {
			font-family: arial;
    		font-size: 65px;
		    font-weight: bold;    
      }
      .sizeExtraLargeBold {
			font-family: arial;
    		font-size: 80px;
		    font-weight: bold;    
      }   	  
	 .sizeIcon {
         font-size: 30px;
		 font-weight: bold;
      }	  
   </html:style>
	<Page title="{i18n>pageTitleWeather}" enableScrolling="false" showHeader="false" class="sapUiLargeMargin sapUiResponsiveContentPadding"> 
		<content>
		    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
		    <!-- +++++ Two columns: Image/Widget <-> Date/Time/Sensor data  -->
		    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->			
			<!-- <HBox class="sapUiSmallMargin" justifyContent="Center"> -->
			<HBox class="sapUiTinyMargin" justifyContent="Center">
				<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
				<!-- +++++ Left column: Image/Widget ++++++++++++++++++++++++++ -->
				<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
				<VBox>	
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
					<!-- +++++ Upper part: Image ++++++++++++++++++++++++++++++++++ -->
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->					
					<!-- <Carousel id="carousel" width="960px" height="540px" loop="true"> --> <!-- arrowsPlacement="PageIndicator"> -->
					<Carousel id="carousel" width="777px" height="437px" loop="true">
						<!-- Add pictures dynamically in controller -->
					</Carousel>
					<HBox id="widget">
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
						<!-- +++++ Lower part: Widget +++++++++++++++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->						
						<!-- Include widget from dasWetter.com, size 777px x 437px -->
						<c:HTML  id="dasWetterCom">
						<!--
						content="&lt;div id=&quot;cont_abbd5cfc591d9b105ca08f4286926eb5&quot;&gt;&lt;script type=&quot;text/javascript&quot; async src=&quot;https://www.daswetter.com/wid_loader/abbd5cfc591d9b105ca08f4286926eb5&quot;&gt;&lt;/script&gt;&lt;/div&gt;">
						-->
						</c:HTML>			
					</HBox>
  				    <HBox>
					  <Label text="{i18n>widgetDataLastUpdated}" class="sapUiSmallMarginEnd" />  
					  <Text text="{
						path: '/dateTimeDasWetterDe',
						type: 'sap.ui.model.type.DateTime',
						formatOptions: {
							relative: true,
							relativeScale: 'auto',
							relativeStyle: 'wide'  
						}
					  }" class="sapUiSmallMarginEnd text"/>								
					  <!-- relativeScale: day (default), auto -->
					  <!-- relativeStyle: wide (default), short, narrow -->
					</HBox>	
				</VBox> <!-- alignItems="Center" justifyContent="Center"> -->
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
					<!-- +++++ Right column: Date/Time/Sensor data ++++++++++++++++ -->
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
					<VBox class="sapUiSmallMarginBegin">
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 1. Date ++++++++++++++++++++++++++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->					
						<HBox class="sapUiSmallMarginBottom" justifyContent="Center" alignItems="Center" height="auto" backgroundDesign="Solid">
							<Text text="{path: '/currentDate',												 
										 type: 'sap.ui.model.type.Date',
										 formatOptions: {
											style: 'full',
											source: {
												pattern: 'yyyy/MM/dd'																										
										} 													
									}		
								}" class="text sizeMediumBold"/>						
						</HBox>
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 2. Time ++++++++++++++++++++++++++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->							
						<HBox class="sapUiSmallMarginBottom" justifyContent="Center" alignItems="Center" height="auto" backgroundDesign="Solid">
							<Text text="{path: '/currentTime',
										 type: 'sap.ui.model.type.DateTime',
										 formatOptions: { 
												pattern: 'HH:mm'
											}
										}" class="text sizeLargeBold"/>								
						</HBox>				
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 3. Temperature/Humidity indoor +++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->		
						<VBox id="indoorValues" class="sapUiTinyMarginEnd sapUiMediumMarginBottom" backgroundDesign="Solid">		
							<!-- ===== Indoor values ===== -->
							<Text text="{i18n>currentValuesIndoor}" class="sizeMediumBold text"/>
							<HBox>
								<!-- ===== Temperature indoor ===== -->
								<HBox id="temperatureIndoor" justifyContent="Center" alignItems="Center" class="sapUiMediumMarginStartEnd" width="240px">	
									<VBox>
										<Label for="temperatureIndoorId" text="{i18n>temperature}"/>
										<Text id="temperatureIndoorId" text="{parts: [{path: '/temperatureIndoor'}, {path: '/temperatureIndoorId'}, {path: '/iconTemperatureTrendIndoorId'}, {path: 'internalSettings>/temperatureThresholdIndoor'	} ], formatter: '.formatter.temperature'}" class="sizeLargeBold text"/>
									</VBox>
									<VBox justifyContent="End">
										<Text text=" " class="sizeExtraLargeBold"/>
										<c:Icon
											id="iconTemperatureTrendIndoorId"
											src="sap-icon://arrow-right"
											class="text sizeIcon">
											<c:layoutData>
												<FlexItemData growFactor="1" />
											</c:layoutData>
										</c:Icon>
									</VBox>
								</HBox>
								<!-- ===== Humidity indoor ===== -->
								<HBox id="humidityIndoor" justifyContent="Center" alignItems="Center" class="sapUiMediumMarginStartEnd">
									<VBox>
										<Label for="humidityIndoorId" text="{i18n>humidity}"/>
										<Text id="humidityIndoorId" text="{parts: [{path: '/humidityIndoor'}, {path: '/iconHumidityTrendIndoorId'}], formatter: '.formatter.humidity'}" class="text sizeLargeBold"/>
									</VBox>
									<VBox justifyContent="End">
										<Text text="  " class="sizeExtraLargeBold"/>
										<c:Icon
											id="iconHumidityTrendIndoorId"
											src="sap-icon://arrow-right"
											class="text sizeIcon">
											<c:layoutData>
												<FlexItemData growFactor="1" />
											</c:layoutData>
										</c:Icon>
									</VBox>
								</HBox>
							</HBox>
						</VBox>
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 4. Temperature/Humidity outdoor ++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->			
						<VBox id="OutdoorValues" class="sapUiTinyMarginEnd sapUiMediumMarginBottom" backgroundDesign="Solid">	
							<!-- ===== Outdoor values ===== -->
							<Text text="{i18n>currentValuesOutdoor}" class="sizeMediumBold text"/>
							<HBox>
								<!-- ===== Temperature outdoor ===== -->
								<HBox alignItems="Center" class="sapUiMediumMarginStartEnd" width="240px">
									<VBox>
										<Label for="temperatureOutdoorId" text="{i18n>temperature}"/>
										<Text id="temperatureOutdoorId" text="{parts: [{path: '/temperatureOutdoor'}, {path: '/temperatureOutdoorId'}, {path: '/iconTemperatureTrendOutdoorId'}, {path: 'internalSettings>/temperatureThresholdOutdoor'	} ], formatter: '.formatter.temperature'}" class="sizeLargeBold text"/>
									</VBox>
									<VBox justifyContent="End">
										<Text text="" class="text sizeLargeBold"/>
										<c:Icon
											id="iconTemperatureTrendOutdoorId"
											src="sap-icon://arrow-right"
											class="text sizeIcon">
											<c:layoutData>
												<FlexItemData growFactor="1" />
											</c:layoutData>
										</c:Icon>
									</VBox>
								</HBox>
								<!-- ===== Humidity outdoor ===== -->
								<HBox alignItems="Center" class="sapUiMediumMarginStartEnd">
									<VBox>
										<Label for="humidityOutdoorId" text="{i18n>humidity}"/>
										<Text id="humidityOutdoorId" text="{parts: [{path: '/humidityOutdoor'}, {path: '/iconHumidityTrendOutdoorId'}], formatter: '.formatter.humidity'}" class="text sizeLargeBold"/>
									</VBox>
									<VBox justifyContent="End">
										<Text text="  " class="sizeExtraLargeBold"/>
										<c:Icon
											id="iconHumidityTrendOutdoorId"
											src="sap-icon://arrow-right"
											class="text sizeIcon">
											<c:layoutData>
												<FlexItemData growFactor="1" />
											</c:layoutData>
										</c:Icon>
									</VBox>
								</HBox>
							</HBox>
						</VBox> 
						
						
						<!-- ===== Test ===== -->
						<!--
						<HBox justifyContent= "Start" alignItems="Center">
							<VBox justifyContent= "Center" alignItems="Center">
								<Text text="-6.4" class="text sizeLargeBold"/>
							</VBox>
							<VBox justifyContent= "Start" alignItems="End">
						-->
							<!-- <VBox justifyContent="End" alignItems="End"> -->
								<!-- <Text text="Â°" class="text sizeLargeBold" height="10px"/> -->
						<!--
								<c:Icon
									id="iconTest"
									src="sap-icon://trend-up"
									class="text sizeIcon"
									height="10px">
									<c:layoutData>
										<FlexItemData growFactor="1" />
									</c:layoutData>
								</c:Icon> 
							</VBox>
						</HBox>
						-->
						<!-- ===== Test ===== -->
						
					<!--
					<VBox  class="sapUiSmallMargin">
						<u:Calendar
									id="calendar"
									minDate="{path: '/minDate'}"
									maxDate="{path: '/maxDate'}"
									intervalSelection="false" 
									singleSelection="false">
							
						</u:Calendar>
					</VBox>
					-->
				</VBox>	
			</HBox>
		</content>
	</Page>
</mvc:View>