<mvc:View
	controllerName="sap.ui.demo.wt.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"	
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:html="http://www.w3.org/1999/xhtml"
	height="100%">	
	<html:style>
      .temperatureWarm {
         <!-- color: "#EB1924"; -->
		 <!--   #DC143C-->
		 color: crimson;
      }
      .temperatureCold {
         <!--  	#1E90FF -->	  
         color: dodgerBlue;
      }
	 .text {
         color: grey;
      }
      .sizeMediumBold {
			font-family: arial;
    		font-size: 30px;
		    font-weight: bold;  
	  }    
      .sizeLargeBold {
			font-family: arial;
    		font-size: 55px;
		    font-weight: bold;    
      }    	  
	 .sizeIcon {
         font-size: 30px;
		 font-weight: bold;
      }	  
   </html:style>
	<Page title="{i18n>pageTitleWeather}" enableScrolling="false" showHeader="false" class="sapUiLargeMargin"> 
		<content>
		    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
		    <!-- +++++ Two columns: Image/Widget <-> Date/Time/Sensor data  -->
		    <!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->			
			<HBox class="sapUiSmallMargin">
				<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
				<!-- +++++ Left column: Image/Widget ++++++++++++++++++++++++++ -->
				<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
				<VBox>	
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
					<!-- +++++ Upper part: Image ++++++++++++++++++++++++++++++++++ -->
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->					
					<!-- <Carousel id="carousel" width="960px" height="540px" loop="true"> --> <!-- arrowsPlacement="PageIndicator"> -->
					<Carousel id="carousel" width="777px" height="437px" loop="true">
						<!-- Add pictures dynamically in controller -->
					</Carousel>
					<HBox id="widget">
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
						<!-- +++++ Lower part: Widget +++++++++++++++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->						
						<!-- Include widget from dasWetter.com, size 777px x 437px -->
						<c:HTML  id="dasWetterCom">
						<!--
						content="&lt;div id=&quot;cont_abbd5cfc591d9b105ca08f4286926eb5&quot;&gt;&lt;script type=&quot;text/javascript&quot; async src=&quot;https://www.daswetter.com/wid_loader/abbd5cfc591d9b105ca08f4286926eb5&quot;&gt;&lt;/script&gt;&lt;/div&gt;">
						-->
						</c:HTML>			
					</HBox>
  				    <HBox>
					  <Label text="{i18n>widgetDataLastUpdated}" class="sapUiSmallMarginEnd" />  
					  <Text text="{
						path: '/dateTimeDasWetterDe',
						type: 'sap.ui.model.type.DateTime',
						formatOptions: {
							relative: true,
							relativeScale: 'auto',
							relativeStyle: 'wide'  
						}
					  }" class="sapUiSmallMarginEnd text"/>								
					  <!-- relativeScale: day (default), auto -->
					  <!-- relativeStyle: wide (default), short, narrow -->
					</HBox>	
				</VBox> <!-- alignItems="Center" justifyContent="Center"> -->
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
					<!-- +++++ Right column: Date/Time/Sensor data ++++++++++++++++ -->
					<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
					<VBox class="sapUiSmallMarginBegin">
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 1. Date ++++++++++++++++++++++++++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->					
						<HBox class="sapUiSmallMarginBottom" width="auto">
							<f:SimpleForm id="SimpleFormDisplayDate"
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								title=""
								width="450px">
								<f:content>
									<!-- <Label text=""/> -->
								    <Text text="{path: '/currentDate',												 
												 type: 'sap.ui.model.type.Date',
												 formatOptions: {
												 	style: 'full',
													source: {
												 		pattern: 'yyyy/MM/dd'																										
												} 													
											}		
										}" class="text sizeMediumBold"/>
									
								</f:content>
								<f:layoutData>
									<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
								</f:layoutData>
							</f:SimpleForm>
						</HBox>
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 2. Time ++++++++++++++++++++++++++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->							
						<HBox class="sapUiSmallMarginBottom" justifyContent="Center" alignItems="End">
							<f:SimpleForm id="SimpleFormDisplayTime"
								maxContainerCols="1"
								editable="false"
								layout="ResponsiveGridLayout"
								title=""
								width="450px">
								<f:content>
									<!-- <Label text=""/> -->
									<Text text="{path: '/currentTime',
												 type: 'sap.ui.model.type.DateTime',
												 formatOptions: { 
														pattern: 'HH:mm'
													}
												}" class="text sizeLargeBold"/>						
								</f:content>
								<f:layoutData>
									<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
								</f:layoutData>
							</f:SimpleForm>
						</HBox>				
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 3. Temperature/Humidity indoor +++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->		
                        <VBox>						
							<HBox class="sapUiTinyMarginEnd">							
								<f:SimpleForm id="SimpleFormDisplayIndoorLabel"
									maxContainerCols="2"
									editable="false"
									layout="ResponsiveGridLayout"
									title=""
									width="450px">
									<f:content>
										<Text text="{i18n>currentValuesIndoor}" class="sizeMediumBold text"/>
									</f:content>
									<f:layoutData>
										<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
									</f:layoutData>
								</f:SimpleForm>
							</HBox>

							<HBox class="sapUiSmallMarginBottom">							
								<f:SimpleForm id="SimpleFormDisplayIndoor"
									maxContainerCols="2"
									editable="false"
									layout="ResponsiveGridLayout"
									title=""
									width="225px">
									<f:content>
										<Label text="{i18n>temperature}"/>
										<Text id="temperatureIndoorId" text="{parts: [{path: '/temperatureIndoor'}, {path: '/temperatureIndoorId'}, {path: 'internalSettings>/temperatureThresholdIndoor'} ], formatter: '.formatter.temperature'}" class="sizeLargeBold text"/>
									</f:content>
									<f:layoutData>
										<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
									</f:layoutData>
								</f:SimpleForm>
								
								<f:SimpleForm id="SimpleFormDisplayIndoor2"
									maxContainerCols="2"
									editable="false"
									layout="ResponsiveGridLayout"
									title=""
									width="225px">
									<f:content>
										<Label text="{i18n>humidity}"/>
										<Text id="humidityIndoorId" text="{path: '/humidityIndoor', formatter: '.formatter.humidity'}" class="text sizeLargeBold"/>
									</f:content>
									<f:layoutData>
										<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
									</f:layoutData>
								</f:SimpleForm>						
							</HBox>
						</VBox>
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->	
						<!-- +++++ 4. Temperature/Humidity outdoor ++++++++++++++++++++ -->
						<!-- ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->			
                        <VBox>						
							<HBox>							
								<f:SimpleForm id="SimpleFormDisplayOutdoorLabel"
									maxContainerCols="2"
									editable="false"
									layout="ResponsiveGridLayout"
									title=""
									width="450px">
									<f:content>
										<Text text="{i18n>currentValuesOutdoor}" class="sizeMediumBold text"/>
									</f:content>
									<f:layoutData>
										<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
									</f:layoutData>
								</f:SimpleForm>
							</HBox>						
							<HBox >
								<f:SimpleForm id="SimpleFormDisplayOutdoor"
									maxContainerCols="2"
									editable="false"
									layout="ResponsiveGridLayout"
									title=""
									width="225px">
									<f:content>
										<Label text="{i18n>temperature}"/>
										<Text id="temperatureOutdoorId" text="{parts: [{path: '/temperatureOutdoor'}, {path: '/temperatureOutdoorId'}, {path: 'internalSettings>/temperatureThresholdOutdoor'} ], formatter: '.formatter.temperature'}" class="sizeLargeBold text"/>
									</f:content>
									<f:layoutData>
										<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
									</f:layoutData>
								</f:SimpleForm>		
								<!--
								<VBox height="120px" justifyContent="End"> 
									<c:Icon
										id="iconTemperatureOutdoorTrend"
										src="sap-icon://arrow-right"
										class="sizeIcon text"
										backgroundColor="#FFFFFF">
										<c:layoutData>
											<FlexItemData growFactor="1" />
										</c:layoutData>
									</c:Icon>								
                                </VBox>
								-->
								<!--
								<VBox>
								<f:SimpleForm id="SimpleFormDisplayOutdoor1"
									maxContainerCols="2"
									editable="false"
									layout="ResponsiveGridLayout"
									title=""
									width="225px">
									<f:content>
										<Label text="Mittelwert"/>
										<Text id="temperatureOutdoorId1" text="{path: '/temperatureOutdoorAverage'}" class="sizeLargeBold text"/>
										<Label text=""/>
										<Text id="temperatureOutdoorId2" text="{parts: [{path: '/temperatureOutdoor'}, {path: '/temperatureOutdoorAverage'}], formatter: '.formatter.trend'}" />
										<Label text="Delta"/>
										<Text text="{path: '/temperatureOutdoorDelta'}" class="sizeLargeBold text"/>
										<Label text="LastDelta"/>
										<Text text="{path: '/temperatureOutdoorLastDelta'}" class="sizeLargeBold text"/>										
									</f:content>
									<f:layoutData>
										<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
									</f:layoutData>
								</f:SimpleForm>	
								
								<c:Icon
								    id="iconTemperatureOutdoorTrend"
									src="sap-icon://arrow-right"
									class="sizeLargeBold temperatureWarm"
									
									press="handleStethoscopePress">
									<c:layoutData>
										<FlexItemData growFactor="1" />
									</c:layoutData>
								</c:Icon>
								</VBox>
								-->
								<HBox class="sapUiLargePaddingStart">
									<f:SimpleForm id="SimpleFormDisplayOutdoor2"
										maxContainerCols="2"
										editable="false"
										layout="ResponsiveGridLayout"
										title=""
										width="225px">
										<f:content>
											<Label text="{i18n>humidity}"/>
											<Text id="humidityOutdoorId" text="{path: '/humidityOutdoor', formatter: '.formatter.humidity'}" class="text sizeLargeBold"/>
										</f:content>
										<f:layoutData>
											<FlexItemData shrinkFactor="0" backgroundDesign="Solid" styleClass="sapContrastPlus"/>
										</f:layoutData>
									</f:SimpleForm>
								</HBox>
							</HBox>
						</VBox>

					<!--
					<VBox  class="sapUiSmallMargin">
						<u:Calendar
									id="calendar"
									minDate="{path: '/minDate'}"
									maxDate="{path: '/maxDate'}"
									intervalSelection="false" 
									singleSelection="false">
							
						</u:Calendar>
					</VBox>
					-->
				</VBox>	
			</HBox>
		</content>
	</Page>
</mvc:View>